generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  email            String   @unique
  name             String?
  image            String?
  branches         Branch[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  credits          Float    @default(0.05)
  dailyResetDate   DateTime @default(now())
  dailyCreditsUsed Float    @default(0)
}

model Branch {
  id        String   @id @default(uuid())
  name      String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  parentId  String?
  messages  Json     @default("[]")
  parent    Branch?  @relation("BranchChildren", fields: [parentId], references: [id], onDelete: Cascade)
  children  Branch[] @relation("BranchChildren")
  user      User     @relation(fields: [userId], references: [id])
}
